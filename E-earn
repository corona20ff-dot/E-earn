        function renderPage() {
            navItems.forEach(item => item.classList.remove('active'));

            let contentToRender = '';
            let activePageData = 'home';

            switch (currentPage) {
                case 'home':
                    contentToRender = homePageContent;
                    activePageData = 'home';
                    break;
                case 'deposit':
                    contentToRender = depositPageContent;
                    activePageData = 'home'; // Since the recharge button is on home page
                    break;
                case 'earnings':
                    contentToRender = earningsPageContent;
                    activePageData = 'earnings';
                    break;
                case 'profile':
                    contentToRender = genericPageContent('मेरो');
                    activePageData = 'profile';
                    break;
                case 'server':
                    contentToRender = genericPageContent('सर्भर');
                    activePageData = 'server';
                    break;
                case 'treasure':
                    contentToRender = genericPageContent('खजाना');
                    activePageData = 'home';
                    break;
                case 'withdraw':
                    contentToRender = genericPageContent('निकासी');
                    activePageData = 'home';
                    break;
                case 'bank_account':
                    contentToRender = genericPageContent('बैंक खाता');
                    activePageData = 'home';
                    break;
                case 'password':
                    contentToRender = genericPageContent('पासवर्ड');
                    activePageData = 'home';
                    break;
                case 'recharge_record':
                    contentToRender = genericPageContent('रिचार्ज रेकर्ड');
                    activePageData = 'home';
                    break;
                case 'withdraw_record':
                    contentToRender = genericPageContent('निकासी रेकर्ड');
                    activePageData = 'home';
                    break;
                case 'balance_history':
                    contentToRender = genericPageContent('ब्यालेन्स इतिहास');
                    activePageData = 'home';
                    break;
                case 'download':
                    contentTo
